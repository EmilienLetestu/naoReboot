    <div id="contact" oninput="disable('contactBtn','contactForm')">
        <h2 id="contactUs">Nous contacter</h2>
        <div>
            {{ form_start(form,{'attr':{'id':'contactForm'}}) }}
            <div id="senderInfo">
                <div class ="form-group-row">
                    {{ form_widget(form.fullname,{'attr':{'onkeyup':'validateText("contact_fullname",10,45,"fullnameError")'}}) }}
                    {{ form_errors(form.fullname) }}
                    <span class="checked inlineIcon"><i class="fa fa-check"></i></span>
                    <span id="fullnameError" class="form-control-feedback noError">10 à 45 signes maximum</span>
                </div>
                <div class ="form-group-row">
                    {{ form_widget(form.email,{'attr':{'onkeyup':'validateMail("contact_email","contactMailError")'}}) }}
                    {{ form_errors(form.email) }}
                    <span class="checked inlineIcon"><i class="fa fa-check"></i></span>
                    <span id="contactMailError" class="form-control-feedback noError">Veuillez fournir un e-mail valide</span>
                </div>
                <div class ="form-group-row">
                    {{ form_widget(form.subject,{'attr':{'onkeyup':'validateOptionalText("contact_subject",5,50,"contactSubjectError")'}} ) }}
                    {{ form_errors(form.subject) }}
                    <span class="checked inlineIcon"><i class="fa fa-check"></i></span>
                    <span id="contactSubjectError" class="form-control-feedback noError">5 à 50 signes maximum</span>
                </div>
            </div>
                <div class ="form-group-row">
                    {{ form_widget(form.message,{'attr':{'cols':'180', 'rows':'10', 'onkeyup':'validateTextArea("contact_message",5,100,"contactMsgError","contactWords")'}}) }}
                    {{ form_errors(form.message) }}
                    <span id="contactWords" class="wordCount">0/100</span>
                    <span class="checked textareaIcon"><i class="fa fa-check"></i></span>
                    <span id="contactMsgError" class="form-control-feedback noError">Entre 5 et 100 mots maximum</span>
                </div>
                <div class="form-group-row send">
                    <button class="btn btn-success" type="submit" id="contactBtn" disabled="disabled">Valider</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
