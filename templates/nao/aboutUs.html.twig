    <div id="partnership">
        <h2>Nos partenaires</h2>
        <div>
            <ul class="list-inline partners">
                <li class="list-inline-item">
                    <a href="https://openclassrooms.com/" title="Cliquer pour visiter openclassrooms.com un partenaire Nao">
                        <img src="{{ asset('appPictures/partners/oc.png') }}" alt="openClassrooms partenaire NAO">
