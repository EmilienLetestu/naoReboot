{% if app.request.get('_route') == 'userList' %}
<div class="accountActions">
    <ul class="list-inline">
        <li class="list-inline-item">
            <a class="btn softDelete" id="deleteBtn{{ loop.index }}"
               href="{{ path('userManagement', {'action' :'deactivate','id' :user.id}) }}" onclick="deleteEntity(event,'deleteBtn{{ loop.index }}','member{{ loop.index }}')">
                <i class="fa fa-trash"></i>
            </a>
        </li>
        <li class="list-inline-item">
            <a class="btn ban" id="banBtn{{ loop.index }}"
               href="{{ path('userManagement', {'action' :'ban','id' :user.id}) }}" onclick="ban(event,'banBtn{{ loop.index }}','member{{ loop.index }}')">
                <i class="{{ user.ban == 0 ? 'fa fa-ban' : 'fa fa-user-plus' }}"></i>
            </a>
        </li>
        <li class="list-inline-item">
            <a class="btn privilege" id="privilegeBtn{{ loop.index }}"
               href="{{ path('userManagement', {'action' :'privilege','id' :user.id}) }}" onclick="privilege(event,'privilegeBtn{{ loop.index }}','memberLevel{{ loop.index }}','member{{ loop.index }}')">
                <i class="{{ user.accessLevel < 2 ? 'fa fa-angle-double-up' : 'fa fa-angle-double-down' }}"></i>
            </a>
        </li>
    </ul>
</div>
{% endif %}

{% if app.request.get('_route') == 'accountValidation' %}
    <div class="accountActions">
        <ul class="list-inline">
            <li class="list-inline-item">
                <a class="btn validate" id="agreeBtn{{ loop.index }}"
                   href="{{ path('userManagement', {'action' :'validate','id' :user.id}) }}" onclick="roleRequest(event,'agreeBtn{{ loop.index }}','member{{ loop.index }}')">
                    <i class="fa fa-check"></i>
                </a>
            </li>
            <li class="list-inline-item">
                <a class="btn deny" id="denyBtn{{ loop.index }}"
                   href="{{ path('userManagement', {'action' :'deny','id' :user.id}) }}" onclick="roleRequest(event,'denyBtn{{ loop.index }}','member{{ loop.index }}')">
                    <i class="fa fa-times"></i>
                </a>
            </li>
        </ul>
    </div>
{% endif %}



